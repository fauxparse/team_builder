!!!
%html
  %head
    %title TeamBuilder
    = csrf_meta_tags
    = action_cable_meta_tag
    = stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:700,300,400,400italic", media: "all"
    = stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons", media: "all"
    = stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons", media: "all"
    = stylesheet_link_tag "application", media: "all"
    %meta{name: "viewport", content: "width=device-width, initial-scale=1" }
  %body
    .container
      %input#show-sidebar{type: "checkbox", autocomplete: "off"}
      .container-inner
        = mithril_component("App.Components.Sidebar", {}, tag: "aside")
        %main
        %label.sidebar-scrim{for: "show-sidebar"}

    = javascript_include_tag "application"
    = yield
