!!!
%html
  %head
    %title TeamBuilder
    = csrf_meta_tags
    = action_cable_meta_tag
    = google_fonts_link_tag "Roboto" => %w(300 400 400italic 500 700)
    = material_icons_link_tag
    = stylesheet_link_tag "application", media: "all"
    %meta{name: "viewport", content: "width=device-width, initial-scale=1" }
  %body
    .container
      %input#show-sidebar{type: "checkbox", autocomplete: "off"}
      .container-inner
        = sidebar
        %main
        %label.sidebar-scrim{for: "show-sidebar"}

    = javascript_include_tag "application"
    = javascript_include_tag "/locales/#{I18n.locale}"
    = yield
